<TextWidget>:
    BoxLayout:
        orientation: "vertical"
        size: root.size

        Label:
            id: label1
            font_size: 30
            text: "Hello_World"
            size_hint_y: 1
        Button:
            id: button1
            text: "OK"
            font_size: 20
            size_hint_y: 0.5

        BoxLayout:
            orientation: "horizontal"

            TextsWidget:
